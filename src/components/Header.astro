---
import {
  Astronav,
  Dropdown,
  DropdownItems,
  MenuIcon,
  MenuItems,
} from 'astro-navbar'
import Logo from '../assets/logo.svg'
import HeaderLink from './HeaderLink.astro'
---

<header
  class="max-w-(--breakpoint-xl) flex flex-col lg:flex-row justify-between items-center my-5 px-5 mx-auto"
>
  <Astronav>
    <div class="flex w-full justify-between items-center">
      <HeaderLink href={'/'} class={'hover:rotate-180 transition-transform'}>
        <Logo height={50} />
      </HeaderLink>
      <div class="flex lg:hidden items-center">
        <MenuIcon class="w-6 h-6 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex w-full justify-end items-center">
      <ul class="flex flex-col lg:flex-row lg:gap-5 lg:items-center">
        <li>
          <Dropdown class="group">
            <button
              class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-gray-600 hover:text-gray-900"
            >
              <span>Backend</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div
                class="lg:absolute w-full lg:w-48 z-50 lg:left-0 origin-top-left"
              >
                <ul
                  class="px-3 lg:py-2 lg:rounded-md lg:shadow-sm lg:border flex flex-col lg:bg-white"
                >
                  <li>
                    <HeaderLink href={'/blog/hertz/'} class={'text-lg'}>
                      Hertz
                    </HeaderLink>
                  </li>
                  <li>
                    <HeaderLink href={'/blog/kitex/'} class={'text-lg'}>
                      Kitex
                    </HeaderLink>
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <Dropdown class="group">
            <button
              class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-gray-600 hover:text-gray-900"
            >
              <span>Frontend</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div
                class="lg:absolute w-full lg:w-48 z-50 lg:left-0 origin-top-left"
              >
                <ul
                  class="px-3 lg:py-2 lg:rounded-md lg:shadow-sm lg:border flex flex-col lg:bg-white"
                >
                  <li>
                    <HeaderLink href={'/blog/hertz/'} class={'text-lg'}>
                      Hertz
                    </HeaderLink>
                  </li>
                  <li>
                    <HeaderLink href={'/blog/kitex/'} class={'text-lg'}>
                      Kitex
                    </HeaderLink>
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <Dropdown class="group">
            <button
              class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-gray-600 hover:text-gray-900"
            >
              <span>Ops</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div
                class="lg:absolute w-full lg:w-48 z-50 lg:left-0 origin-top-left"
              >
                <ul
                  class="px-3 lg:py-2 lg:rounded-md lg:shadow-sm lg:border flex flex-col lg:bg-white"
                >
                  <li>
                    <HeaderLink href={'/blog/hertz/'} class={'text-lg'}>
                      Hertz
                    </HeaderLink>
                  </li>
                  <li>
                    <HeaderLink href={'/blog/kitex/'} class={'text-lg'}>
                      Kitex
                    </HeaderLink>
                  </li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
        <li>
          <HeaderLink href={'/about/'}> About </HeaderLink>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>
